{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "modules": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "spread": true,
    "templateStrings": true
  },
  "rules": {
    "camelcase": [0],
    "consistent-return": [0],
    "curly": [0],
    "dot-notation": [2, {"allowKeywords": false}],
    "eqeqeq": [0],
    "quotes": [1, "single"],
    "no-underscore-dangle": [0],
    "no-use-before-define": [2, "nofunc"]
  },
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jasmine": true
  },
  "globals": {
    "d3": true
  }
}